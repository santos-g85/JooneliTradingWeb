
@model IEnumerable<Benefits>

<section class="py-5 bg-warning bg-opacity-25">
    <div class="container px-4">
        <div class="row align-items-center">
            <!-- Left Column - Feature Highlights -->
            <div class="col-lg-6 order-2 order-lg-1 mt-4 mt-lg-0">
                <div class="p-4">
                    <h3 class="fw-bold mb-4 ">Why Businesses Trust Us</h3>

                    <div class="d-flex align-items-start mb-3">
                        <div class="icon-box bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3">
                            <i class="bi bi-graph-up text-success fs-5"></i>
                        </div>
                        <div>
                            <strong>Data-Driven Insights</strong>
                            <p class="mb-0 text-muted">Make informed decisions backed by real-time analytics.</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-3">
                        <div class="icon-box bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3">
                            <i class="bi bi-lightning-charge text-warning fs-5"></i>
                        </div>
                        <div>
                            <strong>Lightning-Fast Operations</strong>
                            <p class="mb-0 text-muted">Automate your workflows to save hours every week.</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start">
                        <div class="icon-box bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3">
                            <i class="bi bi-shield-check text-primary fs-5"></i>
                        </div>
                        <div>
                            <strong>Secure & Reliable</strong>
                            <p class="mb-0 text-muted">Your data is protected with enterprise-grade security.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Content -->
            <div class="col-lg-6 order-1 order-lg-2">
                <div class="d-inline-block px-3 py-2 bg-light bg-opacity-10 text-dark rounded-pill mb-4">
                    Proven Results
                </div>

                <h2 class="display-4 fw-bold mb-4">
                    Transform Your Business Operations
                </h2>

                <p class="lead text-muted mb-5">
                    Join hundards of businesses that have revolutionized their inventory
                    management and achieved remarkable results.
                </p>

                <ul class="list-unstyled">
                    @foreach (var benefit in Model)
                    {
                        <li class="d-flex align-items-start mb-3">
                            <div class="w-25 h-25 bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 me-3 mt-1">
                                <i class="bi bi-check-lg text-black fs-6"></i>
                            </div>
                            <span class="fs-5">@benefit.Title</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .text-purple {
        color: #6f42c1 !important;
    }

    .bg-purple.bg-opacity-10 {
        background-color: rgba(111, 66, 193, 0.1) !important;
    }

    .icon-box {
        width: 40px;
        height: 40px;
    }

    .w-25 {
        width: 25px !important;
    }

    .h-25 {
        height: 25px !important;
    }

</style>