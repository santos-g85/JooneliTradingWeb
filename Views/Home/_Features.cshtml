@model IEnumerable<Feature>

<section class="py-5 bg-white">
    <div class="container px-4">
        <div class="text-center mb-5">
            <h2 class="display-4 mb-4 fw-bold">
                Everything You Need to Manage Inventory
            </h2>
            <p class="lead text-muted mx-auto" style="max-width: 600px;">
                Powerful features designed to simplify your inventory management
                and boost operational efficiency.
            </p>
        </div>

        <div class="row g-4">
            @foreach (var feature in Model) 
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-2 hover-card">
                        <div class="card-body p-4">
                            <div class="w-50 h-50 bg-primary bg-opacity-10 rounded-lg d-flex align-items-center justify-content-center mb-3">
                                <i class="@feature.Icon fs-4 text-primary"></i>
                            </div>
                            <h3 class="h4 mb-3">@feature.Title</h3>
                            <p class="text-muted mb-0">@feature.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .hover-card {
        transition: all 0.3s ease;
        border-color: #dee2e6 !important;
    }

        .hover-card:hover {
            border-color: #0d6efd !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .rounded-lg {
        border-radius: 0.75rem !important;
    }

    .w-50 {
        width: 50px !important;
    }

    .h-50 {
        height: 50px !important;
    }
</style>