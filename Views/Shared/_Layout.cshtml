<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Jooneli Trading - Complete inventory management solution for modern businesses</title>

    @RenderSection("Styles", required: false)

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JooneliTrading.styles.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="~/images/logo.jpg" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">


    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Jooneli Trading" />
    <meta name="robots" content="index, follow" />
    <meta name="title" content="Jooneli Trading"/>
    <meta name="description" content="Inventory Management System." />

    <!-- Open Graph Meta -->
    <meta property="og:title" content="Jooneli Trading" />
    <meta property="og:description" content="Jooneli Trading" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://jooneli.com/" />
    <meta property="og:image" content="http://jooneli.com/" />
    <meta property="og:image:alt" content="Jooneli Trading" />

    <!-- Twitter Meta -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jooneli Trading" />
    <meta name="twitter:description" content="Jooneli Trading" />
    <meta name="twitter:image" content="http://jooneli.com/images/logo.png" />

    <link href="https://fonts.googleapis.com/css2?family=Aria+Nova&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>

</head>
<body>

    <header>
        @await Html.PartialAsync("_Navbar")
    </header>

    <main role="main" >
        @RenderBody()
    </main>
    
    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
