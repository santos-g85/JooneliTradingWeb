@model PricingViewModel
@{
    var Products = Model.Products;
    var Starter = Products.FirstOrDefault(p => p.Title == "Starter");
    var Professional = Products.FirstOrDefault(p => p.Title == "Professional");
    var Enterprise = Products.FirstOrDefault(p => p.Title == "Enterprise");
}

<!-- Hero Section -->
<section class="bg-warning bg-opacity-10 py-5">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold  mb-4">Simple, Transparent Pricing</h1>
                <p class="lead mb-4">Choose the perfect plan for your business. All plans include core features with no hidden fees.</p>
                
                @* <div class="d-flex justify-content-center gap-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="billingOption" id="Monthly" value="1" checked>
                        <label class="form-check-label fw-bold" for="monthly">Monthly Billing</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="billingOption" id="Yearly" value="12">
                        <label class="form-check-label fw-bold" for="yearly">Yearly Billing </label>
                    </div>
                </div> *@

            </div>
        </div>
    </div>
</section>

<!-- Pricing Plans -->
<section class="py-5">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <!-- Starter Plan -->
            <div class="col-lg-4">
                <div class="card h-100 border-2">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="text-center mb-4">
                            <span class="badge bg-light text-dark mb-3">Perfect for Small Businesses</span>
                            <h3 class="card-title h2">@Starter.Title</h3>
                            <div class="my-4">
                                <span class="h1 fw-bold price">@Starter.Price</span>
                                <span class="text-muted" id="price-period">/month</span> 
                            </div>
                            <p class="text-muted">@Starter.Description</p>
                        </div>

                        <button class="btn btn-outline-dark btn-lg w-100 mb-4">Start Free Trial</button>

                        <ul class="list-unstyled mb-4 flex-grow-1">
                            @foreach(string properties in Starter.Properties)
                            {
                                <li class="mb-3 d-flex align-items-start">
                                    <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                                    <span>@properties</span>
                                </li>
                            }
                            @if(Starter.NotProperties != null && Starter.NotProperties.Any())
                            {
                                foreach (string properties in Starter.NotProperties)
                                {
                                    <li class="mb-3 d-flex align-items-start">
                                        <i class="bi bi-x-circle text-muted me-2 mt-1"></i>
                                        <span>@properties</span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Professional Plan -->
            <div class="col-lg-4">
                <div class="card h-100 border-dark border-2 shadow-lg">
                    <div class="card-body p-4 d-flex flex-column position-relative">
                        <div class="position-absolute top-0 start-50 translate-middle">
                            <span class="badge bg-success bg-opacity-75  px-3 py-2">Most Popular</span>
                        </div>

                        <div class="text-center mb-4 mt-3">
                            <h3 class="card-title h2">@Professional.Title</h3>
                            <div class="my-4">
                                <span class="h1 fw-bold ">@Professional.Price</span>
                                <span class="text-muted">/month</span>
                            </div>
                            <p class="text-muted">@Professional.Description</p>
                        </div>

                        <button class="btn btn-dark btn-lg w-100 mb-4">Start Free Trial</button>

                        <ul class="list-unstyled mb-4 flex-grow-1">
                            @foreach (string properties in Professional.Properties)
                            {
                                <li class="mb-3 d-flex align-items-start">
                                    <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                                    <span>@properties</span>
                                </li>
                            }
                            @if (Professional.NotProperties != null && Professional.NotProperties.Any())
                            {
                                foreach (string properties in Professional.NotProperties)
                                {
                                    <li class="mb-3 d-flex align-items-start">
                                        <i class="bi bi-x-circle text-muted me-2 mt-1"></i>
                                        <span>@properties</span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Enterprise Plan -->
            <div class="col-lg-4">
                <div class="card h-100 border-2">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="text-center mb-4">
                            <span class="badge bg-warning bg-opacity-75 text-dark mb-3">For Large Organizations</span>
                            <h3 class="card-title h2">@Enterprise.Title</h3>
                            <div class="my-4">
                                <span class="h1 fw-bold ">@Enterprise.Price</span>
                            </div>
                            <p class="text-muted">@Enterprise.Description</p>
                        </div>

                        <button class="btn btn-outline-dark btn-lg w-100 mb-4">Contact Sales</button>

                        <ul class="list-unstyled mb-4 flex-grow-1">
                            @foreach (string properties in Enterprise.Properties)
                            {
                                <li class="mb-3 d-flex align-items-start">
                                    <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                                    <span>@properties</span>
                                </li>
                            }
                            @if (Enterprise.NotProperties != null && Enterprise.NotProperties.Any())
                            {
                                foreach (string properties in Enterprise.NotProperties)
                                {
                                    <li class="mb-3 d-flex align-items-start">
                                        <i class="bi bi-x-circle text-muted me-2 mt-1"></i>
                                        <span>@properties</span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@await Html.PartialAsync("_FeatureComparison")

@await Html.PartialAsync("_FAQs", Model.Faqs)

@await Html.PartialAsync("_TrustIndicator")

@section Scripts {
    <script src="~/js/pricing.js"></script>
}
